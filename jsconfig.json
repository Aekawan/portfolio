{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@hooks": ["src/hooks"],
      "@assets/*": ["src/assets/*"],
      "@config/*": ["src/config/*"],
      "@images/*": ["src/images/*"],
      "@layouts": ["src/layouts"],
      "@styles/*": ["src/styles/*"],
      "@pages/*": ["src/pages/*"],
      "@containers/*": ["src/containers/*"],
      "@typography": ["src/components/typography"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
